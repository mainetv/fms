root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_style = space
indent_size = 3

[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab

[*.py]
indent_style = space
indent_size = 3

[*.{yml,yaml}]
indent_style = space
indent_size = 3

[docker-compose.yml]
indent_style = space
indent_size = 2
